@model IEnumerable<WatchedPosition>

@{
    ViewData["Title"] = "Positions Watched";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.X)</th>
                    <th>@Html.DisplayNameFor(model => model.Y)</th>
                    <th>@Html.DisplayNameFor(model => model.Z)</th>
                    <th>@Html.DisplayNameFor(model => model.WatchedPositionCreationDate)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-midle">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="align-midle">
                            @Html.DisplayFor(modelItem => item.X)
                        </td>
                        <td class="align-midle">
                            @Html.DisplayFor(modelItem => item.Y)
                        </td>
                        <td class="align-midle">
                            @Html.DisplayFor(modelItem => item.Z)
                        </td>
                        <td class="align-midle">
                            @Html.DisplayFor(modelItem => item.WatchedPositionCreationDate)
                        </td>
                        <td class="align-midle">
                            <a class="btn btn-outline-primary"><i class="bi bi-pencil-square"></i>Edit</a>|
                            <a class="btn btn-outline-info"><i class="bi bi-eye"></i>Details</a>|
                            <a class="btn btn-danger text-white"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

<div style="position: fixed; right: 25px; bottom: 60px;" class="text-white">
    <a asp-controller="Blocks" asp-action="Create" class="btn btn-success"> <i class="bi bi-plus-circle"></i> Add new</a>
</div>